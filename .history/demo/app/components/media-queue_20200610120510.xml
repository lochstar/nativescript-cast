<StackLayout class="p-20" loaded="onLoaded">
  <Label text="Queue" />
  <Label text="{{ selected }}" />
  <Label text="{{ $parent }}" />

  <FlexboxLayout
    orientation="horizontal"
    justifyContent="space-between"
    class="controls"
  >
    <Button
      text="&#xf100; Prev"
      tap="{{ handlePrevTap }}"
      class="btn btn-primary fas"
      isEnabled="{{ canCast }}"
    />
    <Button
      text="&#xf101; Next"
      tap="{{ handleNextTap }}"
      class="btn btn-primary fas"
      isEnabled="{{ canCast }}"
    />
  </FlexboxLayout>

  <ListView id="listView1" items="{{ dataItems }}">
    <ListView.itemTemplate>
      <StackLayout>
        <Label text="{{ title }}"  />
        <Label text="{{ selected }}" />
      </StackLayout>
    </ListView.itemTemplate>
  </ListView>
</StackLayout>

<Page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  loaded="pageLoaded"
  class="page"
  xmlns:cast="@codelab/nativescript-cast"
>
  <ActionBar title="Cast Demo">
    <ActionItem
      ios.position="right"
    >
      <StackLayout>
        <cast:CastButton
          id="cast"
          color="#ffffff"
          cast="{{ handleCastEvent }}"
        />
      </StackLayout>
    </ActionItem>
  </ActionBar>
  <ScrollView>
    <StackLayout>
      <FlexboxLayout
        orientation="horizontal"
        justifyContent="space-between"
        class="controls"
      >
        <Button
          text="Load Media"
          tap="{{ handleLoadTap }}"
          class="-primary"
          isEnabled="{{ canCast }}"
        />
        <Button
          text="Load Queue"
          tap="{{ handleLoadQueueTap }}"
          class="-primary"
          isEnabled="{{ canCast }}"
        />
        <StackLayout>
          <Label text="Autoplay" />
          <Switch
            checked="{{ autoplay }}"
            loaded="handleAutoplaySwitchLoaded"
          />
        </StackLayout>
      </FlexboxLayout>

      <FlexboxLayout
        orientation="horizontal"
        justifyContent="space-between"
        class="controls ui"
      >
        <Button
          text="Show Instructions"
          tap="{{ handleShowInstructionsTap }}"
          class="-primary"
          isEnabled="{{ !!cast }}"
        />
        <Button
          text="Show Dialog"
          tap="{{ handleShowDialogTap }}"
          class="-primary"
          isEnabled="{{ !!cast }}"
        />
        <Button
          text="Show Controller"
          tap="{{ handleShowControllerTap }}"
          class="-primary"
          isEnabled="{{ canCast }}"
        />
      </FlexboxLayout>

      <StackLayout
        visibility="{{ canCast ? 'visible' : 'collapsed'}}"
      >
        <FlexboxLayout
          orientation="horizontal"
          justifyContent="space-between"
          class="controls"
        >

          <Button
            text="&#xf04c;"
            tap="{{ handlePauseTap }}"
            class="-primary fas"
            isEnabled="{{ canCast }}"
          />
          <Button
            text="&#xf04e; +10"
            tap="{{ handleSeekTap }}"
            class="-primary fas"
            isEnabled="{{ canCast }}"
          />
          <Button
            text="&#xf04d;"
            tap="{{ handleStopTap }}"
            class="-primary fas"
            isEnabled="{{ canCast }}"
          />

          <Button
            text="&#xf100; Prev"
            tap="{{ handlePrevTap }}"
            class="-primary fas"
            isEnabled="{{ mediaStatus.queueItemCount > 0 }}"
          />
          <Button
            text="&#xf101; Next"
            tap="{{ handleNextTap }}"
            class="-primary fas"
            isEnabled="{{ mediaStatus.queueItemCount > 0 }}"
          />
        </FlexboxLayout>

        <FlexboxLayout
          orientation="horizontal"
          justifyContent="space-between"
          class="controls"
        >
          <Button
            text="Set Volume"
            tap="{{ handleSetVolumeTap }}"
            class="-primary fas"
            isEnabled="{{ canCast }}"
          />
          <Button
            text="Toggle Mute"
            tap="{{ handleMuteTap }}"
            class="-primary fas"
            isEnabled="{{ canCast }}"
          />
          <Button
            text="Switch Text Track"
            tap="{{ handleSwitchTextTrackTap }}"
            class="-primary"
            isEnabled="{{ mediaInfo.textTracks.length > 0 }}"
          />
        </FlexboxLayout>

